@model IEnumerable<UniversityManagementWebApp.Areas.Identity.Data.UniversityAppUser>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" ></script>
</head>

<table class="table">
    <thead>
        <tr>
            <th>
               UserName
            </th>
            <th>
                EMail
            </th>
            <th>
                PanNumber
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.UserName
            </td>
            <td>
               @item.Email
            </td>
            <td>
               @item.PanNumber
            </td>
            <td>
               @item.Status
            </td>
            <td>
                 <button  id="@item.Id" value="@item.Id" class="btn btn-outline-success " onclick="Approve()">Approve</button>
                 <button  id="@item.Id" value="@item.Id" class="btn btn-outline-danger abc" onclick="RejectAction()">Reject</button>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function() {
        $(".btn").click(function Approve() {
            var id = $(this).val();
            $.post("https://localhost:7043/Admin/ApproveAction?id=" + id, function(data, status) {
                    history.go(0);
            });
        });
    });

     $(document).ready(function() {
        $(".abc").click(function RejectAction() {
            var id = $(this).val();
            $.post("https://localhost:7043/Admin/RejectAction?id=" + id, function(data, status) {
                    history.go(0);
            });
        });
    });


</script>